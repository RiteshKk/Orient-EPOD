<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--        Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customNoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@drawable/screen_full_bg</item>
    </style>


    <style name="noActionBarHalfScreenBG" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@drawable/screen_half_bg</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dialog.App" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="progressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="splash_background_style" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/screen_full_bg</item>
    </style>
</resources>